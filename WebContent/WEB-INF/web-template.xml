<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
   <display-name>sistema-tutorias</display-name>

   <context-param>
      <param-name>database_url</param-name>
      <param-value>jdbc:mysql://@DB_IP@:@DB_PORT@/sistema_tutorias</param-value>
   </context-param>
   <context-param>
      <param-name>database_driver_class_name</param-name>
      <param-value>com.mysql.jdbc.Driver</param-value>
   </context-param>
   <context-param>
      <param-name>database_username</param-name>
      <param-value>@DB_USERNAME@</param-value>
   </context-param>
   <context-param>
      <param-name>database_password</param-name>
      <param-value>@DB_PASSWORD@</param-value>
   </context-param>

   <welcome-file-list>
      <welcome-file>index.html</welcome-file>
      <welcome-file>index.jsp</welcome-file>
   </welcome-file-list>
   <jsp-config>
      <jsp-property-group>
         <url-pattern>*.jsp</url-pattern>
         <page-encoding>UTF-8</page-encoding>
      </jsp-property-group>
   </jsp-config>
</web-app>

